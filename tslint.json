{
    "p": "./tsconfig.json",
    "defaultSeverity": "error",
    "rules": {
        "max-line-length": [true, 80],
        "no-console": [false],
        "variable-name": [true, "check-format", "allow-leading-underscore"],
        "typedef": [true, "call-signature"]
    },
    "extends": "tslint:recommended"
}
